@model MonitoramentoAmbiental.Models.Parque

@{
    ViewData["Title"] = "Excluir Parque";
}

<div class="container mt-5">
    <h2 class="text-danger">Excluir Parque</h2>
    <p>Tem certeza de que deseja excluir o seguinte parque?</p>

    <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">Localização</dt>
        <dd class="col-sm-9">@Model.Localizacao</dd>

        <dt class="col-sm-3">Área (m²)</dt>
        <dd class="col-sm-9">@Model.Area</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
