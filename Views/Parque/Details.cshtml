@model MonitoramentoAmbiental.Models.Parque

<h2 class="text-center my-4">Detalhes do Parque</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        Detalhes
    </div>
    <div class="card-body">
        <p><strong>Nome:</strong> @Model.Nome</p>
        <p><strong>Localização:</strong> @Model.Localizacao</p>
    </div>
</div>

<a href="/Parque/Index" class="btn btn-secondary mt-3">Voltar</a>
<a href="/Parque/Edit/@Model.Id" class="btn btn-warning mt-3">Editar</a>
<a href="/Parque/Delete/@Model.Id" class="btn btn-danger mt-3">Excluir</a>
